// Pizzahub emnd
function orderPizza(type, name){
    console.log('Pizza ${type} ${name} is ordered');

    setTimeout(function(){
        const msg = 'Pizza ${type} ${name} is ready '
        cancelIdleCallback(msg);
    }, 3000);
}
