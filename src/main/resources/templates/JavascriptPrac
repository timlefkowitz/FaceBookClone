// isAnagram

function compare (a,b){
    var y = a.split("").sort().join(""),
    z = b.split("").sort().join("");
    console.log(z === y
    ? a + " and " + b + "are anagrams!"
    : a + " and " + b + " are not anagrams."
    );
}

// palindrome

function palindrome(str){
    var re = /[^A-Za-z0-9]/g;
    str = str.toLowerCase().replace(re, '');

    var len = str.length;
    
    for (var i ; i < len/2; i++ ){
        if (str[i] !== str [len -1 -i])
        return false;
    }
    return true
}

